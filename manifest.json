{
    "manifest_version": 3,
    "name": "Test Extension",
    "version": "0.1",
    "offline_enabled": true,
  
    "content_scripts": [{
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }],
  
    "action": {
      "default_title": "Test Extension",
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "incognito": "split"
  }